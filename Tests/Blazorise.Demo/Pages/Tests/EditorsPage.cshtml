                <Field IsHorizontal="true">
                    <FieldLabel ColumnSize="ColumnSize.Is2">Test 1</FieldLabel>
                    <FieldBody ColumnSize="ColumnSize.Is3">
                        <TextEdit bind-Text="@value1" />
                    </FieldBody>
                    <FieldBody ColumnSize="ColumnSize.IsAuto">
                        <SimpleButton Color="Color.Secondary" Clicked="@OnSet1_1">Set</SimpleButton>
                        <SimpleButton Color="Color.Secondary" Clicked="@OnSet1_2">Set</SimpleButton>
                    </FieldBody>
                </Field>
                <Field IsHorizontal="true">
                    <FieldLabel ColumnSize="ColumnSize.Is2">Test 2</FieldLabel>
                    <FieldBody ColumnSize="ColumnSize.Is3">
                        <TextEdit bind-EditValue="@value2" />
                    </FieldBody>
                    <FieldBody ColumnSize="ColumnSize.IsAuto">
                        <SimpleButton Color="Color.Secondary" Clicked="@OnSet2_1">Set 2</SimpleButton>
                    </FieldBody>
                </Field>
            </CardBody>
        </Card>
    </Column>
</Row>
