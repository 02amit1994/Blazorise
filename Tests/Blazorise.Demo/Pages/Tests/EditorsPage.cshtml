@*@page "/tests/editors"
<Row>
    <Column>
        <Card Margin="Margin.Is4.OnY">
            <CardHeader>
                <CardTitle>Editors test</CardTitle>
                <CardSubtitle>On this page you can find different samples on how to use edit fields.</CardSubtitle>
            </CardHeader>
            <CardBody>
                <Field IsHorizontal="true">
                    <FieldLabel ColumnSize="ColumnSize.Is2">Text</FieldLabel>
                    <FieldBody ColumnSize="ColumnSize.Is3">
                        <TextEdit />
                    </FieldBody>
                </Field>
                <Field IsHorizontal="true">
                    <FieldLabel ColumnSize="ColumnSize.Is2">Numeric with step</FieldLabel>
                    <FieldBody ColumnSize="ColumnSize.Is3">
                        <TextEdit Role="TextRole.Number" Step="2" />
                    </FieldBody>
                </Field>
                <Field IsHorizontal="true">
                    <FieldLabel ColumnSize="ColumnSize.Is2">Numeric mask</FieldLabel>
                    <FieldBody ColumnSize="ColumnSize.Is3">
                        <TextEdit MaskType="MaskType.Numeric" MaskFormat="c" />
                    </FieldBody>
                </Field>
                <Field IsHorizontal="true">
                    <FieldLabel ColumnSize="ColumnSize.Is2">Date mask</FieldLabel>
                    <FieldBody ColumnSize="ColumnSize.Is3">
                        <TextEdit MaskType="MaskType.DateTime" MaskFormat="d" />
                    </FieldBody>
                </Field>
            </CardBody>
        </Card>
    </Column>
</Row>*@