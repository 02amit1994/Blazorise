@typeparam TItem
@inherits _BaseDataGridDetailRow<TItem>
<TableRow>
    @{
        var location = CommandColumnLocation;

        if ( location == "start" && ParentDataGrid.AllowEdit )
        {
            <TableRowCell>
            </TableRowCell>
        }
        <TableRowCell ColumnSpan="@Columns.Count">
            @ChildContent
        </TableRowCell>
        if ( location == "end" && ParentDataGrid.AllowEdit )
        {
            <TableRowCell>
            </TableRowCell>
        }
    }
</TableRow>