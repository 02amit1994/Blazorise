@inherits Base.BaseFileEdit
<Control Role="ControlRole.File">
    @if ( TagProvider.FileInsideLabel )
    {
        <FormLabel IsFile="true" For="@elementId">
            <input id="@elementId" type="file" class="@ClassMapper.Class" disabled="@IsDisabled" readonly="@IsReadonly" multiple="@IsMultiple" value="@path" onchange="@PathChangedHandled" />
            @ChildContent
        </FormLabel>
    }
    else
    {
        <input id="@elementId" type="file" class="@ClassMapper.Class" disabled="@IsDisabled" readonly="@IsReadonly" multiple="@IsMultiple" value="@path" onchange="@PathChangedHandled" />
        <FormLabel IsFile="true" For="@elementId">@ChildContent</FormLabel>
    }
</Control>
