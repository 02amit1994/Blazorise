@* This has to be name SelectEdit because Razor(not Blazor) still doesn't support case sensitive components. *@
@typeparam TValue
@inherits Base.BaseSelect<TValue>
@if ( !ComponentMapper.HasRegistration( this ) )
{
    <select id="@ElementId" class="@ClassMapper.Class" disabled="@IsDisabled" readonly="@IsReadonly" multiple="@IsMultiple" onchange="@SelectionChangedHandler">
        <CascadingValue Value=this>
            @ChildContent
        </CascadingValue>
    </select>
    @Feedback
}
else
{
    @RenderCustomComponent()
}