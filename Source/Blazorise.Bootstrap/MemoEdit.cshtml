@inherits Base.BaseMemo
@if ( NeedSizableBlock )
{
    <div class="@SizableClassMapper.Class">
        <textarea class="@ClassMapper.Class" placeholder="@Placeholder" disabled="@IsDisabled" readonly="@IsReadonly" value="@Text" maxlength="@MaxLength" rows="@Rows" onchange="@HandleTextChange" />
        @ChildContent
    </div>
}
else
{
    <textarea class="@ClassMapper.Class" placeholder="@Placeholder" disabled="@IsDisabled" readonly="@IsReadonly" value="@Text" maxlength="@MaxLength" rows="@Rows" onchange="@HandleTextChange" />
    @ChildContent
}