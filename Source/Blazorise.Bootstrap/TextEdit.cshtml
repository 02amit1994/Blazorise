@* This has to be name TextEdit because Razor(not Blazor) still doesn't support case sensitive components. *@
@inherits Base.BaseText
@if ( NeedSizableBlock )
{
    <div class="@SizableClassMapper.Class">
        <input type="@Type" class="@ClassMapper.Class" placeholder="@Placeholder" disabled="@IsDisabled" readonly="@IsReadonly" value="@Text" maxlength="@MaxLength" onchange="@HandleTextChange" />
        @ChildContent
    </div>
}
else
{
    <input type="@Type" class="@ClassMapper.Class" placeholder="@Placeholder" disabled="@IsDisabled" readonly="@IsReadonly" value="@Text" maxlength="@MaxLength" onchange="@HandleTextChange" />
    @ChildContent
}