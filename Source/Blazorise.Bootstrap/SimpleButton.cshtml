@* This has to be name SimpleButton because Razor(not Blazor) still doesn't support case sensitive components. *@
@inherits Base.BaseButton
@if ( NeedSizableBlock )
{
    <div class="@SizableClassMapper.Class">
        <button type="@Type.ToButtonTypeString()" class="@ClassMapper.Class" style="@StyleMapper.Style" disabled="@IsDisabled" aria-pressed="@IsActive" onclick="@ClickHandler">
            @ChildContent
        </button>
    </div>
}
else
{
    <button type="@Type.ToButtonTypeString()" class="@ClassMapper.Class" style="@StyleMapper.Style" disabled="@IsDisabled" aria-pressed="@IsActive" onclick="@ClickHandler">
        @ChildContent
    </button>
}