@inherits Base.BaseFileEdit
@if ( NeedSizableBlock )
{
    <div class="@SizableClassMapper.Class">
        <Control Role="ControlRole.File">
            <input id="@elementId" ref="@elementRef" type="file" class="@ClassMapper.Class" disabled="@IsDisabled" readonly="@IsReadonly" multiple="@IsMultiple" accept="@Filter" onchange="@PathChangedHandler" />
            <FormLabel IsFile="true" For="@elementId">@ChildContent</FormLabel>
        </Control>
        @ChildContent
    </div>
}
else
{
    <Control Role="ControlRole.File">
        <input id="@elementId" ref="@elementRef" type="file" class="@ClassMapper.Class" disabled="@IsDisabled" readonly="@IsReadonly" multiple="@IsMultiple" accept="@Filter" onchange="@PathChangedHandler" />
        <FormLabel IsFile="true" For="@elementId">@ChildContent</FormLabel>
    </Control>
    @ChildContent
}